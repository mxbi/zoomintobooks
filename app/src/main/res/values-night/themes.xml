<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZoomIntoBooks" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_1</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="android:editTextColor">@color/brown_1</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorOnPrimary">@color/beige_2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/beige_2</item>
        <item name="colorSecondaryVariant">@color/beige_2</item>
        <item name="colorOnSecondary">@color/dark_brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Night_Buttons" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/beige_2</item>
        <item name="colorPrimaryVariant">@color/beige_2</item>
        <item name="colorOnPrimary">@color/brown_1</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>